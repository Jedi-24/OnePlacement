<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.fragments.RegisteredCompaniesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/registered_company_rv"
        android:layout_above="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/prev_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:src="@drawable/left_arrow_circle_svgrepo_com" />

        <ImageView
            android:id="@+id/nxt_pg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="7dp"
            android:src="@drawable/right_arrow_circle_svgrepo_com" />
    </RelativeLayout>
</RelativeLayout>